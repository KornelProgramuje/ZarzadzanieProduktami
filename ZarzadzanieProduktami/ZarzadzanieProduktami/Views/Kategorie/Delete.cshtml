@model ZarzadzanieProduktami.Models.Kategoria

@{
    ViewBag.Title = "Delete";
}

<h2 class="jumbotron table-bordered text-center">Usuń kategorię</h2>

<h3>Czy na pewno chcesz usunąć kategorię <b>"@Html.DisplayFor(model => model.NazwaKategorii)"</b>? </h3>
<div>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
