@model IEnumerable<ZarzadzanieProduktami.Models.Kategoria>
@{
    ViewBag.Title = "Index";
}
<h2 class="jumbotron table-bordered text-center">Lista kategorii</h2>
<div style="padding-bottom:70px">
    <div style="float:left">
        @Html.ActionLink("Dodaj nową kategorię", "Create", null, new { @class = "btn btn-primary btn-sm" })

    </div>
    <div style="float:right">
        @using (Html.BeginForm())
        {
            <div style="float:right">
                Wyszukaj : @Html.TextBox("wyszukiwanie")
                <br />
                <input style="float:right" type="submit" value="Wyszukaj" class="btn btn-primary btn-sm" />

            </div>
        }
    </div>

</div>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazwaKategorii)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaKategorii)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</table>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger " role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Błąd:</span>
        Brak kategorii o podanej nazwie
    </div>
}
