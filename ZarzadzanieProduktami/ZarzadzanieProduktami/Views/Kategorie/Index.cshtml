@model IEnumerable<ZarzadzanieProduktami.Models.Kategoria>

@{
    ViewBag.Title = "Index";
}

<h2 class="jumbotron table-bordered text-center">Lista kategorii</h2>
<div>
    <a href="Kategorie/Create" class="btn btn-primary btn-sm" role="button" aria-pressed="true">Dodaj nową kategorię</a>
</div>
<br />
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazwaKategorii)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaKategorii)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
